# Root environment variables (if needed)
# Most configuration should go in apps/api/.env or apps/web/.env

# Database (shared)
DATABASE_URL=postgresql://user:password@localhost:5432/fluxcore

# Auth
JWT_SECRET=change-me

# Internal routes (dev only)
INTERNAL_API_KEY=change-me

# AI Providers
GROQ_API_KEY=
OPENAI_API_KEY=

