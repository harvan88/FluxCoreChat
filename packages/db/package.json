{
  "name": "@fluxcore/db",
  "version": "0.1.0",
  "description": "Database schema and utilities for FluxCore",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "bun run src/migrate.ts",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@fluxcore/types": "workspace:*",
    "drizzle-orm": "^0.29.1",
    "postgres": "^3.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/postgres": "^3.0.0",
    "drizzle-kit": "^0.20.6",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
